<%= simple_form_for resource, :as => resource_name, :url => registration_path(resource_name) , :html => {:class => 'form-inline' } do |f| %>

<label style="display: <%= "#{@user.errors.any? ? 'none' : 'block'}" %>;">Disponível em breve.</label>

<% if @user.errors.any? %>
	<div class="alert alert-error">Por favor digite um email válido</div>
<% end %>

<div class="input-prepend"><span class="add-on"><i class="icon-envelope"></i></span>
<%= f.text_field :email, :placeholder => 'Seu endereço de email...' %>
</div>
<%= f.submit "Me inscreva", :class => "btn btn-primary", :id => 'invitation_button' %><p class="help-block">Sem spam. Só um lembrete quando estiver tudo pronto para você.</p>

<% end %>
